<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="tests/_bootstrap.php" colors="true">

    <testsuites>
        <testsuite name="Scrawler Basic Unit Tests">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./core/</directory>
            <exclude>
                <directory>./tests/</directory>
                <directory>./vendor/</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
